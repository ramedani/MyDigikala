@model IEnumerable<Application.DTO.CategoryListDto>


@{
    ViewData["Title"] = "listnews";
    Layout = "~/Views/Shared/_admin.cshtml";
}


<p>
    <a asp-action="AddCategory" class="btn btn-info">ایجاد دسته بندی</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
      
            <td>
                @Html.ActionLink("ویرایش", "AddCategory", new {  id=item.Id },new {@class="btn btn-dark"}) |
                @Html.ActionLink("حذف", "DeleteCategory", new {  id=item.Id },new {@class="btn btn-danger"})
            </td>
        </tr>
    }
    </tbody>
</table>