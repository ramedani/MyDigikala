    {
        foreach (var item in Model.Blocks.OrderBy(b => b.SortOrder))
        {
            @switch (item.BlockType)
            {
                case 1: // Header (تیتر)
                    <h2 class="mt-3 font-DanaMedium text-xl text-zinc-900 dark:text-white">
                        @item.Content
                    </h2>
                    break;

                case 2: // Paragraph (پاراگراف)
                    <p class="mt-3 leading-10 text-gray-600 dark:text-gray-300 text-justify">
                        @item.Content
                    </p>
                    break;

                case 3: // List (لیست)
                {
                    var contentWithStyle = item.Content
                        .Replace("<ul>", "<ul class=\"mt-3 text-gray-600 dark:text-gray-300 space-y-2\">")
                        .Replace("<li>", "<li class=\"flex items-center gap-x-2\"><span class=\"w-3 h-3 rounded-full bg-green-500 flex shrink-0\"></span>");
                    
                    <div>
                        @Html.Raw(contentWithStyle)
                    </div>
                }
                    break;

                default:
                    <div class="mt-3">@Html.Raw(item.Content)</div>
                    break;
            }
        }
    }
    else
    {
        <p class="text-center text-gray-500 mt-5">محتوایی برای نمایش وجود ندارد.</p>
