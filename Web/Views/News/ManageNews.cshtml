    Layout = "~/Views/Shared/_Admin.cshtml";
}

@section css {

    <!-- ==========================  FAVICON ============================= -->
    <link rel="icon" type="image/x-icon" href="~/home/public/Images/svg/favicon.png" />
    <!-- ==========================  STYLE APP ============================= -->
