<form asp-action="ManageNews" method="post" enctype="multipart/form-data" id="mainForm">
    <input type="hidden" asp-for="Id" />
    
    <!-- ============================================================ -->
    <!-- STEP 1: فرم ورود اطلاعات پایه -->
    <!-- ============================================================ -->
    <div id="step-1-container">
        <div class="card">
            <div class="card-header">
